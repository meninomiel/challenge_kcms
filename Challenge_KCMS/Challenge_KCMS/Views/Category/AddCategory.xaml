<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Challenge_KCMS.Views.AddCategory"
             Title="Adicionar Categoria">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Nome da Categoria" Text="{Binding CategoryName}"></Entry>
            <Button Text="Adicionar" Command="{Binding AddCategoryCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>