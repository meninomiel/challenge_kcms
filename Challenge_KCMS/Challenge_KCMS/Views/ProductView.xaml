<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Challenge_KCMS.Views.ProductView"
             xmlns:util="clr-namespace:Challenge_KCMS.Util">

    <ContentView.Resources>
        <ResourceDictionary>
            <util:CurrencyConverter x:Key="currencyConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <ContentView.Content>
      <StackLayout>
            <Entry x:Name="inputName"
                   Text="{Binding Name}"
                   Placeholder="Nome do Produto"></Entry>
            <Entry x:Name="inputPrice"
                   Text="{Binding Price, Converter={StaticResource currencyConverter}}"
                   Placeholder="Preço"></Entry>
            <Editor x:Name="inputDescription"
                   Text="{Binding Description}"
                   Placeholder="Descrição do Produto"></Editor>
        </StackLayout>
  </ContentView.Content>
</ContentView>